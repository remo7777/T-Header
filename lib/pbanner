logotemp="$(mktemp)"
VAR4=$(echo $(($(stty size | cut -d ' ' -f 2) - 17)))
PUT() { echo -en "\033[${1};${2}H"; }
DRAW() {
    echo -en "\033%"
    echo -en "\033(0"
}
WRITE() { echo -en "\033(B"; }
HIDECURSOR() { echo -en "\033[?25l"; }
NORM() { echo -en "\033[?12l\033[?25h"; }

